# Blockchain Configuration for E-Signature System

# Enable/Disable blockchain integration
BLOCKCHAIN_ENABLED=true

# Blockchain Network (Polygon recommended for low gas fees)
BLOCKCHAIN_RPC_URL=https://polygon-rpc.com
BLOCKCHAIN_CHAIN_ID=137

# Smart Contract Address (Deploy your contract first)
BLOCKCHAIN_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Wallet Private Key (Keep this secret!)
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here

# Gas Configuration
BLOCKCHAIN_GAS_LIMIT=200000
BLOCKCHAIN_GAS_PRICE=30000000000

# Blockchain Explorer
BLOCKCHAIN_EXPLORER_URL=https://polygonscan.com/tx/

# Performance Settings
BLOCKCHAIN_CONFIRMATION_BLOCKS=12
BLOCKCHAIN_RETRY_ATTEMPTS=3
BLOCKCHAIN_RETRY_DELAY=5
BLOCKCHAIN_TIMEOUT=30